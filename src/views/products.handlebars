<div class="products-container">
  {{#if loggedUserData}}
    <h1>Bienvenido/a {{loggedUserData.first_name}} {{loggedUserData.last_name}} - Rol: {{loggedUserData.role}}</h1>
  {{/if}}
  {{#if products}}
    <h2>Listado de Productos</h2>
    <div class="product-cards">
      {{#each products}}
        <div class="product-card">
          <div class="product-image">
            <img src="{{thumbnails.[0]}}" alt="{{title}}">
          </div>
          <h3 class="product-title">{{title}}</h3>
          <p class="product-price">{{price}} USD</p>
          <p class="product-code">CÃ³digo: {{code}}</p>
          <p class="product-stock">Stock: {{stock}}</p>
        </div>
      {{/each}}
    </div>
  {{else}}
    <h2>No hay productos para mostrar</h2>
  {{/if}}
</div>
<br />

<form id='logoutForm' action='/api/sessions/logout' method='GET'>
  <input name='Logout' type='submit' value='Logout' />
</form>

<script src='/static/js/index.js'></script>
