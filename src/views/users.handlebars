<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Users</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/main.css">
  <link rel="stylesheet" href="/static/css/{{style}}">
</head>
<body>
  <div class="admin-users-container">
    <h1>Administraci贸n de Usuarios</h1>
        <!-- Filtros de ordenamiento -->
    <div class="sorting">
      <label for="sortField">Ordenar por:</label>
      <select id="sortField" name="sortField">
        <option value="email">Email</option>
        <option value="role">Rol</option>
        <option value="first_name">Nombre</option>
        <option value="last_name">Apellido</option>
      </select>
      
      <label for="sortOrder">Direcci贸n:</label>
      <select id="sortOrder" name="sortOrder">
        <option value="asc">Ascendente</option>
        <option value="desc">Descendente</option>
      </select>
      
      <button id="applySort">Aplicar Orden</button>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Email</th>
          <th>Rol</th>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Acci贸n</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td>{{email}}</td>
            <td>{{role}}</td>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>
              <button class="btn btn-danger" onclick="deleteUser('{{id}}')">Eliminar</button>
              <button class="btn btn-primary" onclick="changeRole('{{id}}')">Cambiar Rol</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
        <!-- Flechas de paginaci贸n -->
    <div class="pagination">
      {{#if hasPrevPage}}
        <a href="?page={{prevPage}}&limit={{limit}}&sortField={{sortField}}&sortOrder={{sortOrder}}">Anterior</a>
      {{/if}}
      {{#if hasNextPage}}
        <a href="?page={{nextPage}}&limit={{limit}}&sortField={{sortField}}&sortOrder={{sortOrder}}">Siguiente</a>
      {{/if}}
    </div>
  </div>
  </div>
  <!-- Script para aplicar ordenamiento -->
  <script src="/static/js/users.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
